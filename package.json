{
  "name": "privacy-voting-fhe",
  "version": "1.0.0",
  "description": "Privacy-preserving voting system using Fully Homomorphic Encryption",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy": "npx hardhat run scripts/deploy.js --network sepolia",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localfhenix",
    "verify": "npx hardhat run scripts/verify.js --network sepolia",
    "interact": "npx hardhat run scripts/interact.js --network sepolia",
    "simulate": "npx hardhat run scripts/simulate.js --network hardhat",
    "node": "npx hardhat node",
    "clean": "npx hardhat clean",
    "coverage": "npx hardhat coverage",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint '**/*.js'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix && eslint '**/*.js' --fix",
    "format": "prettier --write '**/*.{js,json,sol,md}'",
    "format:check": "prettier --check '**/*.{js,json,sol,md}'",
    "security:check": "node scripts/security-check.js",
    "security:audit": "npm audit --audit-level=moderate",
    "gas:report": "REPORT_GAS=true npm test",
    "prepare": "husky install",
    "precommit": "npm run format:check && npm run lint && npm run security:check",
    "prebuild": "npm run clean && npm run lint",
    "build": "npm run compile"
  },
  "keywords": [
    "blockchain",
    "voting",
    "privacy",
    "fhe",
    "encryption",
    "ethereum",
    "security",
    "audited"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "prettier": "^3.2.4",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.1.1",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.5"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.5.0",
    "dotenv": "^16.0.3"
  }
}
